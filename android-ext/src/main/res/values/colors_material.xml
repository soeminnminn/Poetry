<!-- Colors specific to Material themes. -->
<resources>
    <color name="background_mtl_dark">#ff303030</color>
    <color name="background_mtl_light">#ffeeeeee</color>
    <color name="background_floating_mtl_dark">#ff424242</color>
    <color name="background_floating_mtl_light">#ffeeeeee</color>

    <color name="primary_mtl_dark">#ff212121</color>
    <color name="primary_mtl_light">#ffefefef</color>
    <color name="primary_dark_mtl_dark">#ff000000</color>
    <color name="primary_dark_mtl_light">#ff757575</color>

    <color name="ripple_mtl_dark">#4dffffff</color>
    <color name="ripple_mtl_light">#1f000000</color>

    <color name="accent_mtl_light">@color/mtl_deep_teal_500</color>
    <color name="accent_mtl_dark">@color/mtl_deep_teal_200</color>

    <color name="button_mtl_dark">#ff5a595b</color>
    <color name="button_mtl_light">#ffd6d7d7</color>

    <color name="switch_thumb_normal_mtl_dark">#ffbdbdbd</color>
    <color name="switch_thumb_normal_mtl_light">#fff1f1f1</color>
    <color name="switch_thumb_disabled_mtl_dark">#ff616161</color>
    <color name="switch_thumb_disabled_mtl_light">#ffbdbdbd</color>

    <color name="bright_foreground_mtl_dark">@color/white</color>
    <color name="bright_foreground_mtl_light">@color/black</color>
    <!-- White 50% -->
    <color name="bright_foreground_disabled_mtl_dark">#80ffffff</color>
    <!-- Black 50% -->
    <color name="bright_foreground_disabled_mtl_light">#80000000</color>
    <color name="bright_foreground_inverse_mtl_dark">@color/bright_foreground_mtl_light</color>
    <color name="bright_foreground_inverse_mtl_light">@color/bright_foreground_mtl_dark</color>

    <color name="dim_foreground_mtl_dark">#ffbebebe</color>
    <color name="dim_foreground_mtl_light">#ff323232</color>
    <color name="dim_foreground_disabled_mtl_dark">#80bebebe</color>
    <color name="dim_foreground_disabled_mtl_light">#80323232</color>

    <color name="hint_foreground_mtl_dark">@color/bright_foreground_disabled_mtl_dark</color>
    <color name="hint_foreground_mtl_light">@color/bright_foreground_disabled_mtl_light</color>

    <!-- TODO: This is 40% alpha on the default accent color. -->
    <color name="highlighted_text_mtl_dark">#6680cbc4</color>
    <!-- TODO: This is 40% alpha on the default accent color. -->
    <color name="highlighted_text_mtl_light">#66009688</color>

    <color name="link_text_mtl_dark">@color/mtl_deep_teal_200</color>
    <color name="link_text_mtl_light">@color/mtl_deep_teal_500</color>

    <!-- Text & foreground colors -->
    <eat-comment />

    <color name="primary_text_default_mtl_light">#de000000</color>
    <color name="secondary_text_default_mtl_light">#8a000000</color>

    <color name="primary_text_default_mtl_dark">#ffffffff</color>
    <color name="secondary_text_default_mtl_dark">#b3ffffff</color>

    <item name="disabled_alpha_mtl_light" format="float" type="dimen">0.26</item>
    <item name="disabled_alpha_mtl_dark" format="float" type="dimen">0.30</item>

    <!-- Primary & accent colors -->
    <eat-comment />

    <color name="mtl_deep_teal_200">#ff80cbc4</color>
    <color name="mtl_deep_teal_500">#ff009688</color>

    <color name="mtl_blue_grey_800">#ff37474f</color>
    <color name="mtl_blue_grey_900">#ff263238</color>
    <color name="mtl_blue_grey_950">#ff21272b</color>

    <!-- Forward compatibility for Material-style theme colors -->
    <eat-comment />

    <color name="legacy_primary_dark">#ff000000</color>
    <color name="legacy_primary">#ffe6e6e6</color>
    <color name="legacy_primary_light">#ffffffff</color>
    <color name="legacy_control_activated">#ff90df25</color>
    <color name="legacy_control_normal">#99ffffff</color>
    <color name="legacy_button_pressed">#fffea50b</color>
    <color name="legacy_button_normal">#f3dbdbdb</color>

    <color name="legacy_light_primary_dark">@color/legacy_primary_dark</color>
    <color name="legacy_light_primary">@color/legacy_primary</color>
    <color name="legacy_light_primary_light">@color/legacy_primary_light</color>
    <color name="legacy_light_control_activated">@color/legacy_control_activated</color>
    <color name="legacy_light_control_normal">#99000000</color>
    <color name="legacy_light_button_pressed">@color/legacy_button_pressed</color>
    <color name="legacy_light_button_normal">@color/legacy_button_normal</color>

    <!-- mtl -->
    <color name="mtl_pressed_highlight_dark">#1AFFFFFF</color>
    <color name="mtl_focused_highlight_dark">#77000000</color>
    <color name="mtl_pressed_highlight_light">#10000000</color>
    <color name="mtl_focused_highlight_light">#40000000</color>
</resources>