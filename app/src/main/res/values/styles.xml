<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- https://medium.com/androiddevelopers/appcompat-v23-2-daynight-d10f90c83e94 -->
    <style name="Theme.AppCompat.DayNight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="isLightTheme">true</item>

        <item name="popupMenuStyle">@style/AppTheme.PopupOverlay.Light</item>
        <item name="navigationHeaderStyle">@style/AppTheme.AppBarHeader.Light</item>
        <item name="navigationHeader">@style/AppTheme.PopupOverlay.Light</item>
        <item name="toolbarMain">@style/AppWidget.Toolbar.Light</item>
        <item name="listCardMain">@style/AppWidget.ListCard.Light</item>
        <item name="chipStyle">@style/AppWidget.Chip.Light</item>
        <item name="chipGroupStyle">@style/AppWidget.ChipGroup</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TranslucentStatus">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_full_holo_dark</item>
    </style>

    <style name="AppTheme.Dialog.Light" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_full_holo_light</item>
    </style>

    <style name="AppTheme.Dialog.NoTitle" parent="@style/AppTheme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog.Light.NoTitle" parent="@style/AppTheme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat"/>

    <style name="AppTheme.PopupOverlay.Light" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarHeader" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/side_nav_bar</item>
    </style>

    <style name="AppTheme.AppBarHeader.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/side_nav_bar_light</item>
    </style>

    <style name="AppWidget">
    </style>

    <style name="AppWidget.BorderlessButton" parent="@style/Widget.AppCompat.Button.Borderless">
    </style>

    <style name="AppWidget.ActionbarButton" parent="@style/Widget.AppCompat.ActionButton">
    </style>

    <style name="AppWidget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/card_background</item>
    </style>

    <style name="AppWidget.Toolbar.Light" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/card_background_light</item>
    </style>

    <style name="AppWidget.ListCard">
        <item name="android:background">@drawable/card_background</item>
    </style>

    <style name="AppWidget.ListCard.Light">
        <item name="android:background">@drawable/card_background_light</item>
    </style>

    <style name="AppWidget.Chip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="chipStrokeColor">@color/white_33_opacity</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="AppWidget.Chip.Light" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="chipStrokeColor">@color/grey_90</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="AppWidget.ChipGroup" parent="@style/Widget.MaterialComponents.ChipGroup">
    </style>

</resources>
