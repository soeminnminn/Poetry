<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="AppTheme.TranslucentStatus">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog" parent="@android:style/Theme.Material.Light.Dialog">
    </style>

    <style name="AppTheme.Dialog.NoTitle" parent="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppWidget.BorderlessButton" parent="@android:style/Widget.Material.Button.Borderless">
    </style>

    <style name="AppWidget.ActionbarButton" parent="@android:style/Widget.Material.ActionButton">
    </style>
</resources>
